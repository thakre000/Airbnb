

<div class="ms-auto">

  


  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css
    ">
  </head>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">title</label>
      <input type="text" name="listing[title]"   
      class="form-control"/>

      </div>
      <br><br>
      <div class="mb-3">
        <label for="basic-url" class="form-label">Your vanity URL</label>
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4">
        </div>


      <div>
        <label for="description" class="form-label">Description</label>
      
      <textarea
    
        name="listing[description]"
        class="form-control"
      ></textarea></div>
     
  <div>
    <label for="image" class="form-label">Upload listing image</label>
    <input type="file"
    name="listing[image]"
    
    type="text"
    class="form-control" 
  />
  </div>
    
      
      <div>
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" />
      </div>
      
      <div>
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
      </div>
      
      <div>
        <label for="location" class="form-label">Location</label>
        <input 
        type="text"
        name="listing[location]"
        placeholder="enter location"
        
        class="form-control"
      />
      </div>
      
      <br /><br />
      <button class="btn btn-dark">Add</button>
    </form>



</div>