
  <% layout("/layouts/boilerplate.ejs")%> 
  <div class="row-mt-3">
  <div class="col-8 offset-3">
    <h3><%=listing.title%></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image%>" alt="listing_image"
    class="card-img-top show-img">
  
  
  <div class="card-body">
    <p>
      <b>
        
      </b><br><p>
      <i><%= listing.owner%></i></p>
      <p>
      <%= listing.description%> <br>
    </p>
      <%=listing.price%> <br>
      <%= listing.location%> <br>
      <%= listing.country%>
    </p>
  </div>
  </div>
  

<% if (currUser && currUser._id.equals(listing.owner)) {
  %>

  <div class= btns>
    
  
    <a href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark col-1 offset-3 form-label " >Delete</button>
    </form>
  </div>
<%} %>
<% if (currUser) {%> 
  <div class="col-8 offset-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%=listing.id %>/reviews" method="POST" novalidate ;
    class=" needs-validation mb-3"><div class="mt-3 mb-3">

      <label for="rating" class="form-label">Rating</label 
        <input type="">
        <input type="range" class="form-range" max="5" min="1" id="rating" name="review[rating]">

    
    </div
  
    <input type="">
    <div>
      <label for="comment" class="form-label">Comments</label>
    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    </div>
  
  
  
    
    
  
  <button class="col-1 offset-6 btn btn-outline-dark  ">Submit</button>
  </form>
<%}%>
  <h4>
    ALL Reviews
  </h4>
  <div class="row">
    <% for (review of listing.reviews){%>
      <div class="card col-5 mb-3">
        <div class="card-title">
  <h5 class="card-title">vishal thakre</h5>
  <p class="card-text"> <%= review.author%></p>
    <p class="card-text"> <%= review.comment%></p>
    <p class="card-text"> <%= review.rating%>stars</p>
    <fieldset class="starability-slot">
      <legend>First rating:</legend>
      <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="rating" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="rating" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="rating" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="rating" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="rating" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    
  <form method="POST" action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE"  class="mb-3">
  </div>
  <button class="btn btn-sm btn-dark">Delete</button>
</div>
  </form>
        
      
  <%  }%>
  </div>
  
  </div>
</div>


